<div class="w-full lg:w-3/5 lg:mt-10">
  <div class="border-r border-b border-l border-orange-400 lg:border-l-0 lg:border-t lg:border-orange-400 cstm-bg-primary rounded p-4 drop-shadow-xl">
    <div class="mb-8">
      <div class="w-full flex">
        <div class="text-white font-bold text-4xl mb-10 mt-3"><span class="cstm-dark">Mon profil - </span><%= @user.nickname %></div>
        <div class="flex justify-end mt-5 flex-auto">
          <%= button_to edit_user_registration_path(current_user), class: "relative inline-flex items-center justify-center p-8 px-20 py-4 overflow-hidden font-medium text-white transition duration-300 ease-out border-2 border-white rounded-full shadow-md group", method: :get do %>
            <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full cstm-bg-valid group-hover:translate-x-0 ease">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </span>
            <span class="absolute flex items-center justify-center w-full h-full text-white transition-all duration-300 transform group-hover:translate-x-full ease text-xl">Mettre à jour</span>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="text-white text-xl flex flex-start mr-auto mt-8">
        <ul>
          <p><span class="cstm-dark">Prénom : </span> <%= @user.first_name %></p>
          <p class="mt-3"><span class="cstm-dark">Nom : </span> <%= @user.last_name %></p>
          <p class="mt-3"><span class="cstm-dark">Age : </span> <%= @user.age %> ans</p>
          <p class="mt-3"><span class="cstm-dark">Email : </span> <%= @user.email %></p>
          <p class="mt-3"><span class="cstm-dark">Téléphone : </span> <%= @user.phone_number %></p></div>
        </ul>
    </div>
  </div>
</div>