<article class="w-full lg:w-3/5 lg:mt-10">
  <div class="border-r border-b border-l cstm-bg-primary lg:border-l-0 lg:border-t lg:border-orange-400 cstm-bg-primary rounded p-4 drop-shadow-xl">
    <div class="mb-8">
      <section class="w-full flex">
        <div class="text-white font-bold text-4xl mb-10 mt-3">
          <span class="cstm-dark">
            Mon profil - 
          </span>
          <%= @user.nickname %>
        </div>
        <div class="flex justify-end mt-5 flex-auto">
          <%= button_to edit_user_registration_path(current_user), class: "relative inline-flex items-center justify-center p-8 px-20 py-4 overflow-hidden font-medium text-white transition duration-300 ease-out border-2 border-white rounded-full shadow-md group", method: :get do %>
            <span class="absolute inset-0 flex items-center justify-center w-full h-full text-orange-400 duration-300 -translate-x-full bg-white group-hover:translate-x-0 ease">
