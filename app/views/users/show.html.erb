                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </span>
            <span class="absolute flex items-center justify-center w-full h-full text-white transition-all duration-300 transform group-hover:translate-x-full ease text-xl">
              Mettre Ã  jour
            </span>
          <% end %>
        </div>
      </section>
      <hr>
      <section class="text-white text-xl flex flex-start mr-auto mt-8">
        <ul>
          <p class="mt-3"><span class="cstm-dark">
            Email : </span> <%= @user.email %>
          </p>
        </ul>
      </section>
    </div>
  </div>
</article>