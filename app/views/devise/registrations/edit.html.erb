<body class="font-mono shadow-lg">
  <div class="w-full lg:w-7/12 bg-yellow-100 p-5 rounded-lg lg:rounded-l-none">
    <h3 class="pt-4 text-2xl text-center ">Mettre à jour ses données</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "px-8 pt-6 pb-1 mb-4 bg-white rounded bg-yellow-100" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, "Adresse e-mail", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Adresse e-mail", required: true, autofocus: true, autocomplete: "email" %>
      </div>
      <hr class="mb-4 border-t" style="border-color: orange;">
      <div class="mb-4">
        <%= f.label :password, "Mot de passe", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <% if @minimum_password_length %>
          <em><%= content_tag :span, "(#{@minimum_password_length} caractères minimum)", class: "text-black" %></em>
        <% end %>
        <%= f.password_field :password, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Mot de passe", autocomplete: "new-password" %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Confirmer le mot de passe", autocomplete: "new-password" %>
      </div>
      <hr class="mb-4 border-t" style="border-color: orange;">
      <div class="mb-4">
        <%= f.label :nickname, "Choisissez un pseudo", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.text_field :nickname, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Pseudonyme", required: true, autocomplete: "nickname" %>
      </div>
      <div class="mb-4">
        <%= f.label :first_name, "Votre prénom", class: "block mb-2 text-sm font-bold text-gray-700" %>
      <%= f.text_field :first_name, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Prénom", required: true, autocomplete: "given-name" %>

      </div>
      <div class="mb-4">
        <%= f.label :last_name, "Votre nom", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.text_field :last_name, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Nom", required: true, autocomplete: "family-name" %>
      </div>
      <div class="mb-4">
        <%= f.label :current_password, "Votre mot de passe actuel", class: "block mb-2 text-sm font-bold text-gray-700" %>
        <%= f.password_field :current_password, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:outline-none focus:shadow-outline", placeholder: "Mot de passe actuel", autocomplete: "current-password" %>
      </div>
      <div class="mb-6 text-center">

      <%= f.submit "Mettre à jour", class: "mb-6 text-center relative inline-flex items-center justify-center p-2 px-6 py-1 overflow-hidden font-medium text-white transition-all duration-300 ease-out border-2 border-white rounded-full shadow-md group bg-orange-600 hover:bg-orange-800" %>

      </div>
      <hr class="mb-6 border-t" style="border-color: orange;">
    <% end %>

    <div class="text-center">
      <%= link_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sûr?" }, method: :delete, class: "text-orange-500 hover:text-orange-800" %><br />
    </div>
      <div class="mb-6 text-center">
    <%= render "devise/shared/links" %>
      </div>
  </div>
</body>
