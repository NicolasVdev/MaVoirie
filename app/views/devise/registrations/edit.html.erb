<body class="shadow-lg cstm-dark shadow-2xl">
  <div class="w-full lg:w-7/12 cstm-bg-sand p-5 rounded">
    <h3 class="pt-4 text-2xl text-center font-medium text-gray-700">Mettre à jour ses données</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "px-8 pt-6 pb-1 mb-4 rounded cstm-bg-sand" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-4">
        <%= f.label :email, "Adresse e-mail", class: "block mb-2 text-sm font-bold" %>
        <%= f.email_field :email, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Adresse e-mail", required: true, autofocus: true, autocomplete: "email" %>
      </div>
      <hr class="mb-4 border-t" style="border-color: orange;">
      <div class="mb-4">
        <%= f.label :current_password, "Votre mot de passe actuel", class: "block mb-2 text-sm font-bold" %>
        <%= f.password_field :current_password, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Mot de passe actuel", autocomplete: "current-password" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, "Mot de passe", class: "block mb-2 text-sm font-bold" %>
        <% if @minimum_password_length %>
          <em><%= content_tag :span, "(#{@minimum_password_length} caractères minimum)", class: "text-black" %></em>
        <% end %>
        <%= f.password_field :password, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Mot de passe", autocomplete: "new-password" %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block mb-2 text-sm font-bold" %>
        <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Confirmer le mot de passe", autocomplete: "new-password" %>
      </div>
      <hr class="mb-4 border-t" style="border-color: orange;">
      <div class="mb-4">
        <%= f.label :nickname, "Votre pseudo", class: "block mb-2 text-sm font-bold" %>
        <%= f.text_field :nickname, class: "w-full px-3 py-2 text-sm leading-tight text-gray-700 border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Pseudonyme", required: true, autocomplete: "nickname" %>
      </div>
      <div class="mb-6 text-center">
        <div class="py-4">
          <%= button_tag(type: 'submit', class: "relative inline-flex items-center justify-center w-1/2 2xl:w-1/4 xl:w-1/4 md:w-1/4 lg:w-1/4 sm:w-2/5 h-8 overflow-hidden font-medium text-gray-700 transition duration-300 ease-out border-2 border-gray-700 shadow-md group") do %>
            <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-orange-400 group-hover:translate-x-0 ease">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </span>
            <span class="absolute flex items-center justify-center w-full h-full text-gray-700 transition-all duration-300 transform group-hover:translate-x-full ease">Mettre à jour</span>
          <% end %>
        </div>
      </div>
      <hr class="mb-4 border-t" style="border-color: orange;">
    <% end %>
    <div class="text-center">
      <p>Mécontent?</p>
      <%= button_to "Supprimer mon compte", user_path(current_user), data: { confirm: "Etes-vous sûr?", turbo_confirm: "Etes-vous sûr?" }, method: :delete, class: "font-medium text-red-500 hover:text-red-600 pb-2" %>
    </div>
  </div>
</body>
