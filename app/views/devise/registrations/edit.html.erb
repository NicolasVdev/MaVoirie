<section class="nav-color dark:bg-gray-900">
   <div class="flex flex-col items-center justify-center px-6 py-6 ">
    <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do %>
     <%= image_tag("logo.png", alt: "logo", class: "w-20 h-20 mr-2") %>
      <% end %>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
      <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-500 md:text-2xl dark:text-white text-center">
        Mettre à jour ses données
      </h1>
        <br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-4 md:space-y-6") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.email_field :email, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autofocus: true, autocomplete: "email" %>
          </div>
            <br>
            <hr style="border-color: orange;">
            <br>
          <div>
            <%= f.label :Mot_de_passe, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <% if @minimum_password_length %>
            <em><%= content_tag :span, "(#{@minimum_password_length} caractères minimum)", class: "text-black" %></em>
            <% end %>
            <%= f.password_field :password, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "new-password" %>
          </div>

          <div>
            <%= f.label :Confirmation_du_mot_de_passe, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.password_field :password_confirmation, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "new-password" %>
          </div>
            <br>
            <hr style="border-color: orange;">
            <br>
          <div>
            <%= f.label :Choisissez_un_pseudo, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :nickname, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "nickname" %>
          </div>
          <div>
            <%= f.label :Votre_prénom, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :first_name, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "first_name" %>
          </div>
          <div>
            <%= f.label :Votre_nom, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :last_name, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "last_name" %>
          </div>
          <div>
            <%= f.label :Votre_numéro_de_téléphone, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :phone_number, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "last_name" %>
          </div>
          <div>
            <%= f.label :Votre_age, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_field :age, class: "nav-color border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", autocomplete: "last_name" %>
          </div>
            <br>
          <%= f.submit "Mettre à jour", class: "w-full text-white bg-cyan-500 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>

        <% end %>
<hr>
        <h3 class="mt-4 text-gray-900 dark:text-white mx-auto mt-8 px-1 flex justify-center items-center">Fermer mon compte</h3>
        <div class="text-gray-500 dark:text-gray-400 mx-auto mt-8 px-1 flex justify-center items-center"> Mécontent? 
        </div>
<div class= "mx-auto mt-1 px-0 flex justify-center items-center space-x-2">         
  <%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Etes vous certain?" }, method: :delete, class: "inline-block m-2 bg-red-400 hover:bg-red-500 text-white font-bold py-1 px-3 rounded" %>
  <%= link_to "Retour", :back, class: "inline-block m-2 bg-gray-400 hover:nav-color0 text-white font-bold py-1 px-3 rounded" %>
</div>
      </div>
    </div>
  </div>
</section>
