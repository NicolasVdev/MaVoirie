<section class="bg-nav-color dark:bg-gray-900 rounded p-6 flex flex-col items-center justify-center">
  <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do %>
    <%= image_tag("logo.png", alt: "logo", class: "w-20 h-20 mr-2") %>
  <% end %>

  <div class="grid grid-cols-1 items-center justify-center">
    <div class="w-[50vw] bg-white dark:bg-gray-800 dark:border-gray-700 rounded-lg shadow md:mt-0 xl:p-0 px-16 sm:px-24 lg:px-32">

      <div class="p-6 md:space-y-6 space-y-4">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-500 dark:text-white md:text-2xl text-center">
          S'enregistrer
        </h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "md:space-y-6 space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <% field_classes = "block w-full p-2.5 rounded-lg border border-gray-300 text-gray-900 sm:text-sm focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>

          <%# Email Field %>
          <div class="space-y-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-900 dark:text-white mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: field_classes %>
          </div>

          <%# Password Field %>
          <hr class="border-black">
          <div class="space-y-4">
            <%= f.label :Mot_de_passe, class: "block text-sm font-medium text-gray-900 dark:text-white mb-2" %>
            <% if @minimum_password_length %>
              <em class="text-black">
                <%= "(#{@minimum_password_length} caractÃ¨res minimum)" %>
              </em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: field_classes %>
          </div>

          <%# Other fields (nickname, first_name, last_name, phone_number, age) %>
          <hr class="border-black">
          <% [:nickname, :first_name, :last_name, :phone_number, :age].each do |field| %>
            <div class="space-y-4">
              <%= f.label field, class: "block text-sm font-medium text-gray-900 dark:text-white mb-2" %>
              <%= f.text_field field, autocomplete: field.to_s, class: field_classes %>
            </div>
          <% end %>

          <%= f.submit "S'enregistrer", class: "w-full py-2.5 px-5 text-sm font-medium rounded-lg text-center text-white bg-blue-500 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
        <% end %>

        <div class="mt-8 px-1 container mx-auto flex justify-center items-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
</section>
