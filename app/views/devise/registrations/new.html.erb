<div class="w-full lg:w-7/12 p-5 cstm-bg-sand shadow-2xl">
  <h3 class="pt-4 text-2xl text-center font-medium cstm-dark">Cr√©er votre compte</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "px-8 pt-6 pb-1 mb-4 rounded cstm-bg-sand" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-4">
      <%= f.label :nickname, "Pseudonyme", class: "block mb-2 text-sm font-bold cstm-dark" %>
      <%= f.text_field :nickname, class: "w-full px-3 py-2 text-sm leading-tight cstm-dark border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Pseudonyme", required: true %>
    </div>
    <div class="mb-4">
      <%= f.label :email, "Adresse e-mail", class: "block mb-2 text-sm font-bold cstm-dark" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 text-sm leading-tight cstm-dark border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Adresse e-mail", required: true %>
    </div>
    <div class="mb-4">
      <%= f.label :password, "Mot de passe", class: "block mb-2 text-sm font-bold cstm-dark" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 text-sm leading-tight cstm-dark border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Mot de passe", required: true %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "block mb-2 text-sm font-bold cstm-dark" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 text-sm leading-tight cstm-dark border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline", placeholder: "Confirmer le mot de passe", required: true %>
    </div>
    <div class="text-center">
      <fieldset class="pb-1">
        <input checked id="checkbox-1" required type="checkbox" value="" class="w-4 h-4 text-orange-400 bg-white border-orange-400 lack rounded focus:ring-transparent dark:focus:ring-transparent dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
        <label for="checkbox-1" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">J'accepte les <a href="#" class="text-orange-400 hover:underline dark:text-orange-500">conditions d'utilisation.</a></label>
      </fieldset>
      <div class="py-4">
        <%= button_tag(type: 'submit', class: "relative inline-flex items-center justify-center w-2/5 2xl:w-2/6 xl:w-2/6 md:w-1/4 lg:w-1/4 sm:w-2/5 h-8 overflow-hidden font-medium cstm-dark transition duration-300 ease-out border-2 border-gray-700 shadow-md group") do %>
          <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-orange-400 group-hover:translate-x-0 ease">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
          <span class="absolute flex items-center justify-center w-full h-full cstm-dark transition-all duration-300 transform group-hover:translate-x-full ease">S'enregistrer</span>
        <% end %>
      </div>
      <hr class="mb-6 border-t border-orange-400">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

