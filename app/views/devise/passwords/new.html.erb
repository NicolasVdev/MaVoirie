<article class="w-full lg:w-7/12 p-5 cstm-bg-sand shadow-2xl">
  <h3 class="pt-4 text-2xl text-center font-medium cstm-dark">Mot de passe oublié?</h3>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "px-8 pt-6 pb-1 mb-4 rounded cstm-bg-sand" }) do |f| %>
    <section class="flex-grow md:mr-2 md:mb-0 pb-4">
      <%= f.label :email, class: "block mb-2 text-sm font-bold cstm-dark" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 text-sm leading-tight cstm-dark border-orange-300 rounded shadow appearance-none focus:border-orange-500 focus:ring-0 focus:shadow-outline" %>
    </section>
    <section class="mt-8 px-1 pb-2 container mx-auto flex justify-center items-center">
      <%= button_tag(type: 'submit', class: "relative inline-flex items-center justify-center w-full md:w-1/4 lg:w-1/2 sm:w-1/3 h-10 py-[20px] overflow-hidden font-medium cstm-dark transition duration-300 ease-out border-2 border-gray-700 shadow-md group") do %>
        <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-orange-400 group-hover:translate-x-0 ease">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
        </span>
        <span class="absolute flex items-center justify-center w-full h-full cstm-dark transition-all duration-300 transform group-hover:translate-x-full ease">Demander un lien de réinitialisation</span>
      <% end %>
    </section>
  <% end %>
  <hr class="mb-6 border-t border-orange-400">
  <section class="mt-4 px-1 container mx-auto grid justify-items-center">
    <%= render "devise/shared/links", class: "my-4" %>
  </section>
</article>