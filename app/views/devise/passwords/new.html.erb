<section class="bg-nav-color dark:bg-gray-900 rounded p-6 flex flex-col items-center justify-center">
  <h2 class="mb-6 text-2xl font-semibold text-gray-900 dark:text-white">Forgot your password?</h2>

  <div class="grid grid-cols-1 items-center justify-center">
    <div class="w-[70vw] bg-white dark:bg-gray-800 dark:border-gray-700 rounded-lg shadow md:mt-0 xl:p-0 px-16 sm:px-24 lg:px-32">
      <div class="p-6 md:space-y-6 space-y-4">
        <% if flash[:alert] %>
          <div class="alert alert-danger">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "md:space-y-6 space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <% field_classes = "block w-full p-2.5 rounded-lg border border-gray-300 text-gray-900 sm:text-sm focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>

          <div class="space-y-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-900 dark:text-white mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: field_classes %>
          </div>

          <%= f.submit "Send me reset password instructions", class: "w-full py-2.5 px-5 text-sm font-medium rounded-lg text-center text-white bg-blue-500 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8 px-1 container mx-auto flex justify-center items-center">
    <%= render "devise/shared/links" %>
  </div>
</section>
