<article class="bg-nav-color rounded p-6 flex flex-col items-center justify-center">
  <h2 class="mb-6 text-2xl font-semibold cstm-dark">Changez votre mot de passe</h2>
  <section class="grid grid-cols-1 items-center justify-center">
    <div class="w-[70vw] bg-white rounded-lg shadow md:mt-0 xl:p-0 px-16 sm:px-24 lg:px-32">
      <div class="p-6 md:space-y-6 space-y-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "md:space-y-6 space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <% field_classes = "block w-full p-2.5 rounded-lg border border-gray-300 cstm-dark sm:text-sm focus:ring-primary-600 focus:border-primary-600" %>
          <div class="space-y-4">
            <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium cstm-dark mb-2" %>
            <% if @minimum_password_length %>
              <em class="text-white">
                <%= "(#{@minimum_password_length} caractÃ¨res minimum)" %>
              </em>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: field_classes %>
          </div>
          <div class="space-y-4">
            <%= f.label :password_confirmation, "Confirmez mon mot de passe", class: "block text-sm font-medium cstm-dark mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: field_classes %>
          </div>
          <%= f.submit "Changer mon mot de passe", class: "w-full py-2.5 px-5 text-sm font-medium rounded-lg text-center text-white bg-blue-500 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300" %>
        <% end %>
      </div>
    </div>
  </section>
  <section class="mt-8 px-1 container mx-auto flex justify-center items-center">
    <%= render "devise/shared/links" %>
  </section>
</article>