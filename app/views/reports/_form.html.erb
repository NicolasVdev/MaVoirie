<%= form_with(model: report, class: "contents") do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(report.errors.count, "erreur(s)") %> a empêché la création de ce signalement :</h2>
      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= form.hidden_field :is_validate, value: nil %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <%= form.hidden_field :status_id, value: Status.first.id %>

  <div class="my-5 relative">
    <%= form.label :address, class: "block" %>
    <%= form.text_field :address, id: "addressInput", placeholder: "Saisissez votre adresse", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>

    <div id="resultContainer" class="absolute left-0 w-full bg-white rounded-b shadow-md border border-gray-200 z-10" style="display: none;">
      <ul id="addressResults" class="cursor-pointer"></ul>
    </div>
  </div>

  <div class="my-5">
<div class="my-5">
  <%= form.label :images, class: "block" %>
  <%= form.file_field :images, multiple: true, accept: "image/*", class: "block mt-2" %>
</div>

  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
<% if report.images.any? %>
  <h3>Uploaded Images</h3>
  <% report.images.each do |image| %>
    <%= image_tag(url_for(image), width: 100) %>
<%= link_to 'Delete Image', delete_image_attachment_report_path(:id, :image_id),
            method: :delete,
            data: { confirm: 'Êtes-vous certain(e) ?', turbolinks: false } %>

  <% end %>
<% end %>


