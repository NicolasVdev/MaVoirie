<div class="lg:w-2/3 w-full">
  <article class="text-center pb-4">
    <%= button_to admin_root_path, class: "relative inline-flex items-center justify-center w-1/2 2xl:w-2/5 xl:w-2/5 md:w-2/5 lg:w-2/5 sm:w-2/5 h-12 overflow-hidden font-medium cstm-yellow transition duration-300 ease-out border-2 border-white rounded-lg shadow-md group", method: :get do %>
      <span class="cstm-bg-dark cstm-yellow absolute flex items-center justify-center w-full h-full transition-all duration-300 transform group-hover:translate-x-full ease">
        Revenir sur le dashboard admin
      </span>
      <span class="cstm-bg-primary absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 translate-x-full cstm-bg-primary group-hover:translate-x-0 ease">
        <svg class="w-6 h-6 transform -rotate-270" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      </span>
    <% end %>
  </article>
  <article class="md:flex">
    <section class="fixed items-center top-[52%] left-[2%] hidden xl:block">
      <div class="h-4/5 cstm-bg-dark font-medium border-2 border-white rounded-lg shadow-md">
        <p class="mt-3 mx-3 cstm-bg-dark cstm-primary">Signalement :</p>
        <ul>
          <li class="mx-3 panel-anchor">
            <a href="#reports">en cours de validation</a>
          </li>
          <li class="mx-3 panel-anchor">
            <a href="#validated">validés</a>
          </li>
          <li class="mx-3 panel-anchor">
            <a href="#accepted">acceptés</a>
          </li>
          <li class="mx-3 panel-anchor">
            <a href="#in_progress">en cours de réalisation</a>
          </li>
          <li class="mx-3 panel-anchor">
            <a href="#resolved">résolus</a>
          </li>
          <li class="mx-3 mb-3 panel-anchor">
            <a href="#top">Revenir en haut de page</a>
          </li>
        </ul>
      </div>
    </section>
    <section class="ml-[8%]">
      <div id="reports" class="relative overflow-x-auto">
        <%= render 'reports', reports: @reports %>
      </div>
      <a href="#top" class="p-1.5 relative overflow-x-auto xl:hidden panel-anchor font-medium border-2 border-white rounded-lg shadow-md w-52">Revenir en haut de page</a>
      <div id="validated" class="relative overflow-x-auto">
        <%= render 'validated', validated: @validated %>
      </div>
      <a href="#top" class="p-1.5 relative overflow-x-auto xl:hidden panel-anchor font-medium border-2 border-white rounded-lg shadow-md w-52">Revenir en haut de page</a>
      <div id="accepted" class="relative overflow-x-auto">
        <%= render 'accepted', accepted: @accepted %>
      </div>
      <a href="#top" class="p-1.5 relative overflow-x-auto xl:hidden panel-anchor font-medium border-2 border-white rounded-lg shadow-md w-52">Revenir en haut de page</a>
      <div id="in_progress" class="relative overflow-x-auto">
        <%= render 'in_progress', in_progress: @in_progress %>
      </div>
      <a href="#top" class="p-1.5 relative overflow-x-auto xl:hidden panel-anchor font-medium border-2 border-white rounded-lg shadow-md w-52">Revenir en haut de page</a>
      <div id="resolved" class="relative overflow-x-auto">
        <%= render 'resolved', resolved: @resolved %>
      </div>
      <a href="#top" class="p-1.5 relative overflow-x-auto xl:hidden panel-anchor font-medium border-2 border-white rounded-lg shadow-md w-52">Revenir en haut de page</a>
    </section>
  </article>
</div>