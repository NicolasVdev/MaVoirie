<h5 class="text-center text-3xl py-4 cstm-dark">Signalements validés</h5>
<table class="w-full text-sm text-left cstm-dark mb-10">
  <thead class="text-xs uppercase cstm-bg-dark text-center">
    <tr>
      <th scope="col" class="px-6 py-3 cstm-yellow">Status</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Titre</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Créateur</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Images</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Signalement</th>
      <th scope="col" class="px-6 pl-2 cstm-yellow">Actions</th>
    </tr>
  </thead>
  <% @validated.each do |report| %>
    <tbody class="cstm-bg-sand">
      <th scope="col" class="px-6 py-3"><%= report.status.title %></th>
      <% if report.title.length > 29 %>
        <th scope="col" class="px-6 py-3"><%= report.title.first(26) %>...</th>
      <% else %>
        <th scope="col" class="px-6 py-3"><%= report.title %></th>
      <% end %>
      <th scope="col" class="px-6 py-3">
        <% if report.user == nil %>
          Utilisateur supprimé
        <% else %>
         <%= report.user.email %>
        <% end %>
      </th>
      <th scope="col" class="px-6 py-3">
        <% if report.images.any? %>
          <%= image_tag(url_for(report.images.first))%>
        <% end %>
      </th>
      <th><%= button_to "Voir le signalement", report, class:"cstm-bg-valid-dark cstm-gray font-bold py-2 px-4 rounded", method: :get %></th>
      <th class=" items-end">
        <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown" class="cstm-bg-valid-dark cstm-gray font-bold py-2 px-5 rounded inline-flex" type="button">
          Actions<svg class="w-4 h-4 ml-2" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
        </button>
        <div id="dropdown" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
          <ul class="text-sm" aria-labelledby="dropdownDefaultButton">
            <li>
              <a href="#" class="block px-4 py-2">Dashboard</a>
            </li>
            <li>
              <a href="#" class="block px-4 py-2">Settings</a>
            </li>
            <li>
              <a href="#" class="block px-4 py-2">Settings</a>
            </li>
          </ul>
        </div>
      </th>
    </tbody>
  <% end %>
</table>