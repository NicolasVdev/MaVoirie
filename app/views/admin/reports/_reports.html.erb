<h5 class="text-center text-3xl py-4">Signalements en attente de validation </h5>
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
  <colgroup>
    <col span="1" style="width: 15%;">
    <col span="2" style="width: 15%;">
    <col span="3" style="width: 20%;">
    <col span="4" style="width: 15%;">
    <col span="5" style="width: 15%;">
    <col span="6" style="width: 20%;">
  </colgroup>
  <thead class="text-xs text-gray-700 uppercase cstm-bg-dark">
    <tr>
      <th scope="col" class="px-6 py-3 cstm-yellow">Status</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Titre</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Description</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Créateur</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Images</th>
      <th scope="col" class="px-6 py-3 cstm-yellow">Signalement</th>
    </tr>
  </thead>
  <% @reports.each do |report| %>
    <tbody class="cstm-bg-sand">
      <th scope="col" class="px-6 py-3"><%= report.status.title %></th>
      <th scope="col" class="px-6 py-3"><%= report.title %></th>
      <th scope="col" class="px-6 py-3"><%= report.content %></th>
      <th scope="col" class="px-6 py-3">
        <% if report.user == nil %>
          Utilisateur supprimé
        <% else %>
         <%= report.user.email %>
        <% end %>
      </th>
      <th scope="col" class="px-6 py-3">
        <% if report.images.any? %>
          <%= image_tag(url_for(report.images.first))%>
        <% end %>
      </th>
      <th><%= button_to "Voir le signalement", report, class:"mt-2 bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded", method: :get %></th>
    </tbody>
  <% end %>
</table>