<div class="w-full">
  <div class="">
    <table style="">
    <colgroup>
      <col span="1" style="width: 10%;">
      <col span="2" style="width: 10%;">
      <col span="3" style="width: 10%;">
      <col span="4" style="width: 10%;">
      <col span="5" style="width: 20%;">
      <col span="6" style="width: 20%;">
      <col span="7" style="width: 10%;">
      <col span="8" style="width: 10%;">
    </colgroup>
    <thead>
      <tr>
        <th>Pseudo</th>
        <th>Prénom</th>
        <th>Nom de famille</th>
        <th>Age</th>
        <th>Email</th>
        <th>Téléphone</th>
        <th>Rôle</th>
        <th>Suppression</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
      <th><%= user.nickname %></th>
      <th><%= user.first_name %></th>
      <th><%= user.last_name %></th>
      <th><%= user.age %></th>
      <th><%= user.email %></th>
      <th><%= user.phone_number %></th>
      <th><% if user.is_admin %> Admin <% else %> Membre <% end %></th>
      <th><%= button_to "Supprimer", admin_users_path(user), class:'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded', form: { data: { turbo_confirm: "Es-tu sur de vouloir supprimer cet utilisateur ?" } }, method: :delete %></th>
      </tbody>
    <% end %>
    </table>
  </div>