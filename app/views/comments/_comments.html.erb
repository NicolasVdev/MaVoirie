<div class="border border-orange-500 rounded p-4 mb-4">
  <% @report.comments.each_with_index do |comment, index| %>
    <div class="<%= index.zero? ? 'pt-4' : '' %> comment <%= index.even? ? 'bg-gray-100' : 'bg-white' %> p-2 pl-4">
      <p class="text-sm text-gray-600"><strong><%= comment.user.nickname %>:</strong></p>
      <p class="text-gray-800 mb-2"><%= comment.content %></p>
    </div>
  <% end %>
</div>
